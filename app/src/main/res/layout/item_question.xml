<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardQuestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.nema.eduup.utils.EdUpTextView
            android:id="@+id/tv_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textColor="@color/text_black_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1. How many minutes are in 1 hour" />

        <com.nema.eduup.utils.EdUpTextView
            android:id="@+id/tv_option_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/text_hint_color"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/tv_question"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_question"
            app:layout_constraintTop_toBottomOf="@+id/tv_question"
            tools:text="a. 100 minutes" />

        <com.nema.eduup.utils.EdUpTextView
            android:id="@+id/tv_option_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/text_hint_color"
            app:layout_constraintEnd_toEndOf="@+id/tv_option_1"
            app:layout_constraintStart_toStartOf="@+id/tv_option_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_option_1"
            tools:text="b. 10 minutes" />

        <com.nema.eduup.utils.EdUpTextView
            android:id="@+id/tv_option_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/text_hint_color"
            app:layout_constraintEnd_toEndOf="@+id/tv_option_2"
            app:layout_constraintStart_toStartOf="@+id/tv_option_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_option_2"
            tools:text="c. 60 minutes" />

        <com.nema.eduup.utils.EdUpTextView
            android:id="@+id/tv_option_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/text_hint_color"
            app:layout_constraintEnd_toEndOf="@+id/tv_option_3"
            app:layout_constraintStart_toStartOf="@+id/tv_option_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_option_3"
            tools:text="d. 50 minutes" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>